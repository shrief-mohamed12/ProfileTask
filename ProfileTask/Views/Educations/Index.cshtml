@model IEnumerable<ProfileTask.Models.Education>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <button class="btn btn-primary" id="create-new-button">Create New</button>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EducPicturePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dateFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dateTo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.employeeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <img src="@item.EducPicturePath" alt="Picture" style="max-width: 100px;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dateFrom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dateTo)
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createModalLabel">Create New Education</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- The content of the Create view will be loaded here -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#create-new-button').click(function () {
                $.ajax({
                    url: '@Url.Action("Create", "Educations")',
                    type: 'GET',
                    success: function (data) {
                        $('#createModal .modal-body').html(data);
                        $('#createModal').modal('show');
                    }
                });
            });
        });
    </script>
}
