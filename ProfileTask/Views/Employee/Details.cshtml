@model ProfileTask.Models.Employee

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Employee</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.employeeName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.employeeName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.employeeJop)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.employeeJop)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.backgroundPicturePath)
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.backgroundPicturePath" alt="Background Picture" style="max-width: 100px;" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.employeePicturePath)
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.employeePicturePath" alt="Employee Picture" style="max-width: 100px;" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.about)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.about)
        </dd>
